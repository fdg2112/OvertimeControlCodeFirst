<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Control de Horas Extras</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OvertimeControlCodeFirst.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @if (User?.Identity != null && User.Identity.IsAuthenticated)
        {
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3 fixed-top">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <a class="navbar-brand" href="@Url.Action("Index", "Dashboard")">Control de Horas Extras</a>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Employee")">Gestión de Empleados</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Reportes", "Informes")">Informes</a>
                            </li>
                        </ul>
                    </div>
                    <div class="d-flex align-items-center">
                        <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-danger btn-sm">Salir</a>
                    </div>
                </div>
            </nav>
        }
    </header>

    <div class="container mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Design By <a href="https://www.linkedin.com/in/frangonza90/" target="_blank" rel="noopener noreferrer">Franco Gonzalez</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
